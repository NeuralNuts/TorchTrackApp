@{
ViewData["Title"] = "Home Page";
}

<title>TorchTrack - Welcome</title>
<style>
body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
}
        header, footer {
            background-color: white;
            color: black;
            padding: 1rem;
            text-align: center;
        }
        nav a {
            margin: 0 15px;
            color: white;
            text-decoration: none;
        }
        .hero {
            padding: 100px 0;
            text-align: center;
            background-color: white;
        }
        .features {
            display: flex;
            justify-content: space-around;
            padding: 50px 0;
        }
        .feature-card {
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 20px;
            background: white;
            width: 30%;
            text-align: center;
        }
</style>

<header>
    <h1>TorchTrack</h1>
</header>

<div class="hero">
    <h2>Track Your Model's Journey with TorchTrack</h2>
    <p>The definitive tracking library for PyTorch.</p>
    <button class="btn btn-secondary">Get Started</button>
</div>

<div class="features">
    <div class="feature-card">
        <img src="~/images/analytics.png" alt="Real-time Analytics Icon">
        <h3>Real-time Analytics</h3>
        <p>Monitor training data on-the-go.</p>
    </div>

    <div class="feature-card">
        <img src="~/images/snorkeling.png" alt="Deep Dive into Models Icon">
        <h3>Deep Dive into Models</h3>
        <p>Analyze model layers, parameters, and more.</p>
    </div>

    <div class="feature-card">
        <img src="~/images/history.png" alt="Historical Data Icon">
        <h3>Historical Training Data</h3>
        <p>Access past training sessions with ease.</p>
    </div>
</div>

<footer>
    <nav>
        <a class="link-secondary" href="#">Home</a>
        <a class="link-secondary" href="#">Features</a>
        <a class="link-secondary" href="#">Documentation</a>
        <a class="link-secondary" href="#">About Us</a>
        <a class="link-secondary" href="#">Download</a>
    </nav>
    <p>© 2023 TorchTrack</p>
</footer>
